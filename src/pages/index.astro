---

import Navbar from '../components/NavBar.astro';
import Hero from '../components/Hero.astro';
import About from '../components/sobremi.astro';
import Experience from '../components/experiences.astro';
import Testimonials from '../components/testimonials.astro';
import Contacto from '../components/contacto.astro';
import FOTER from '../components/fOTER.astro';
---


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
  <title>Document</title>
</head>
<body>
  <Navbar/>
  <div data-aos="fade-up" data-aos-duration="1000"><Hero/></div>
  <div data-aos="fade-up" data-aos-duration="1000"><About /></div>
  <div data-aos="fade-up" data-aos-duration="1000"><Experience /></div>
  <div data-aos="fade-up" data-aos-duration="1000"><Testimonials /></div>
  <div data-aos="fade-up" data-aos-duration="1000"><Contacto/></div>
  <div data-aos="fade-up" data-aos-duration="1000"><FOTER/></div>

</body>
</html>

<style is:global>
  :root {
    --color-beige-light: #FAF9F6;
    --color-beige-medium: #E6D4C1;
    --color-beige-dark: #D2B48C;
    --color-text-primary: #4A4A4A;
    --color-accent: #6B4F4F;
    --color-secondary: #8B7355;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Roboto', sans-serif;
    background-color: var(--color-beige-light);
    color: var(--color-text-primary);
    line-height: 1.6;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section {
    padding: 80px 0;
  }

  .section-title {
    color: var(--color-accent);
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
  }
</style>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script is:inline>
  // Inicializamos AOS con configuración personalizada
  document.addEventListener('DOMContentLoaded', function() {
    AOS.init({
      duration: 800,        // duración base de las animaciones
      easing: 'ease-out',   // tipo de efecto
      once: true,           // las animaciones solo ocurren una vez
      offset: 50,           // offset (en px) desde el punto de activación original
      delay: 0,             // valores de delay por defecto
      anchorPlacement: 'top-bottom', // define qué posición del elemento debe golpear qué posición de la ventana
    });
  });
</script>