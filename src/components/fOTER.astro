---
import { Phone, Mail, MapPin, Linkedin, Twitter, Instagram, Facebook, Clock } from "lucide-astro";
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-info">
        <h3>Contactame</h3>
        <div class="contact-info">
          <div class="contact-item">
            <Phone size="20" stroke-width="1.5" />
            <span>(+56) 9 7224 3832</span>
          </div>
          <div class="contact-item">
            <Mail size="20" />
            <span>saraiabigailhc@gmail.com</span>
          </div>
          <div class="contact-item">
            <MapPin size="20" />
            <span>Altona 4282, Hualpén, Chile</span>
          </div>
          <div class="contact-item">
            <Clock size="20" />
            <span>Lun - Vie: 9:00 - 18:00</span>
          </div>
        </div>
      </div>

      <div class="footer-social">
        <h3>Redes Sociales</h3>
        <div class="social-links">
          <a href="#" target="_blank" rel="noopener noreferrer">
            <Linkedin size="24" />
            <span>LinkedIn</span>
          </a>
          <a href="#" target="_blank" rel="noopener noreferrer">
            <Twitter size="24" />
            <span>Twitter</span>
          </a>
          <a href="#" target="_blank" rel="noopener noreferrer">
            <Instagram size="24" />
            <span>Instagram</span>
          </a>
          <a href="#" target="_blank" rel="noopener noreferrer">
            <Facebook size="24" />
            <span>Facebook</span>
          </a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <div class="copyright">
        <p>&copy; {currentYear} Todos los derechos reservados</p>
      </div>
      <div class="footer-nav">
        <a href="#">Política de Privacidad</a>
        <span class="separator">|</span>
        <a href="#">Términos y Condiciones</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #D8C6A7; /* Beige oscuro */
    padding: 4rem 0 2rem;
    margin-top: 4rem;
    color: #2A2A2A; /* Color de texto principal */
  }

  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .footer-info h3 {
    color: #6D4C41; /* Color de acento */
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .footer-info .tagline {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .contact-item .icon {
    width: 20px;
    height: 20px;
    color: #6D4C41;
  }

  .footer-social h3 {
    color: #6D4C41;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    color: #2A2A2A;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .social-links a:hover {
    color: #6D4C41;
  }

  .footer-bottom {
    padding-top: 2rem;
    border-top: 1px solid #B79C72; /* Beige medio */
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-nav {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .footer-nav a {
    color: #2A2A2A;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-nav a:hover {
    color: #6D4C41;
  }

  .separator {
    color: #B79C72;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
