---
// Footer.astro
---

<footer class="footer">
    <div class="footer-container">
      <div class="contact-info">
        <h3>Contacto y Redes Sociales</h3>
        <div class="social-bar">
          <a href="https://linkedin.com/in/tu-perfil" class="social-link">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="https://calendar.google.com/calendar/u/0/appointments/schedules/AcZssZ2Pm1SpXNlOc_KSlO7PpMbJXk0J_LM0G8yepTI2RYmciLW0A1uij8JgXE6j9Y_6FrLDnRZcnEIP" class="social-link">
            <i class="fab fa-calendar"></i>
          </a>
          <a href="mailto:tu-email@ejemplo.com" class="social-link">
            <i class="fas fa-envelope"></i>
          </a>
          <a href="https://www.instagram.com/ts.saraiabigail/" class="social-link">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
        <p class="contact-text">
          <i class="fas fa-phone"></i> +56 9 7224 3832
          <span class="separator">|</span>
          <i class="fas fa-envelope"></i> SaraiHenandez@gmail.com
        </p>
      </div>
  
      <form class="contact-form">
        <div class="form-row">
          <input type="text" name="name" placeholder="Nombre" required>
          <input type="email" name="email" placeholder="Email" required>
          <input type="tel" name="phone" placeholder="Teléfono">
        </div>
        <div class="form-row">
          <textarea name="message" placeholder="Mensaje" required></textarea>
          <button type="submit" class="submit-btn">Enviar</button>
        </div>
      </form>
    </div>
    
    <div class="footer-bottom">
      <p>© 2024 Sarai Abigail Hernández Cruzat</p>
    </div>
  </footer>
  
  <style>
    .footer {
      background-color: var(--color-beige-medium);
      padding: 2rem 0 1rem;
      margin-top: 3rem;
    }
  
    .footer-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }
  
    .contact-info {
      text-align: center;
      margin-bottom: 1.5rem;
    }
  
    .contact-info h3 {
      color: var(--color-accent);
      font-size: 1.3rem;
      margin-bottom: 1rem;
    }
  
    .social-bar {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
      margin-bottom: 1rem;
    }
  
    .social-link {
      color: var(--color-text-primary);
      font-size: 1.5rem;
      transition: all 0.3s ease;
    }
  
    .social-link:hover {
      color: var(--color-accent);
      transform: translateY(-2px);
    }
  
    .contact-text {
      color: var(--color-text-primary);
      font-size: 0.9rem;
    }
  
    .separator {
      margin: 0 1rem;
      color: var(--color-beige-dark);
    }
  
    .contact-form {
      max-width: 900px;
      margin: 0 auto;
    }
  
    .form-row {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }
  
    .form-row input,
    .form-row textarea {
      padding: 0.6rem;
      border: 1px solid var(--color-beige-dark);
      border-radius: 6px;
      font-size: 0.9rem;
    }
  
    .form-row input {
      flex: 1;
    }
  
    .form-row textarea {
      flex: 3;
      height: 40px;
      resize: none;
    }
  
    .submit-btn {
      flex: 1;
      background-color: var(--color-accent);
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
  
    .submit-btn:hover {
      background-color: var(--color-secondary);
    }
  
    .footer-bottom {
      text-align: center;
      margin-top: 1.5rem;
      padding-top: 1rem;
      border-top: 1px solid var(--color-beige-dark);
      font-size: 0.9rem;
    }
  
    @media (max-width: 768px) {
      .form-row {
        flex-direction: column;
      }
  
      .form-row textarea {
        height: 80px;
      }
  
      .contact-text {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }
  
      .separator {
        display: none;
      }
    }
  </style>
  
  <script>
    document.querySelector('.contact-form').addEventListener('submit', function(e) {
      e.preventDefault();
      alert('Mensaje enviado con éxito!');
    });
  </script>